FROM node:18-alpine

WORKDIR /app

# Install Expo CLI globally
RUN npm install -g @expo/cli

# Install dependencies
COPY package*.json ./
RUN npm ci && npm cache clean --force

# Copy source code
COPY . .

# Expose Expo ports
EXPOSE 19000 19001 19002

# Start Expo development server
CMD ["expo", "start", "--tunnel"]